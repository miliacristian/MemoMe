<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_modify_or_add"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.error404.memometwo.activity_modifyOrAdd">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="84dp">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/emojiModify"
                android:layout_weight="0.13"
                android:gravity="center_vertical"
                android:textAlignment="center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="text|textMultiLine|textCapSentences"
                android:ems="10"
                android:id="@+id/titleModify"
                android:layout_weight="0.13"
                android:gravity="top"
                android:hint="insert your title"
                android:maxLength="32"
                android:layout_marginTop="8dp"
                android:padding="2dp" />

            <ImageView
                android:id="@+id/colorModify"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.13"
                android:background="@android:color/transparent"
                app:srcCompat="@mipmap/color_choice" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/textModify"
                android:hint="Insert note here"
                android:gravity="top"
                android:maxLength="255"
                android:layout_marginTop="15dp"
                 android:layout_marginBottom="15dp"
                android:padding="3dp" />
        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:layout_weight="0.92"
        app:elevation="4dp"
        app:srcCompat="@android:drawable/ic_menu_save" />
</RelativeLayout>
</LinearLayout>
